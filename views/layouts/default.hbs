<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
        />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>{{{title}}}</title>

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous"
        />
        {{#if dark}}
            <style>
                body { background: black; color: white; }
            </style>
        {{/if}}
    </head>
    <body>
        <div class="d-flex flex-column">
            <div class="d-flex justify-content-between">
                <a class="btn btn-primary m-4" href="/todo">Create new todo</a>
                <a class="btn btn-primary m-4" href="?toggle_style=true">Toggle style</a>
            </div>
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <button class="btn btn-primary mx-2">Name &#x25BD;</button>
                    <button class="btn btn-primary mx-2">By Due Date</button>
                    <button class="btn btn-primary mx-2">By Creation Date</button>
                    <button class="btn btn-primary mx-2">By Importance</button>

                </div>
                <button class="btn btn-primary mx-2">Filter Completed</button>
            </div>
            <table>
                {{{body}}}
            </table>
        </div>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"
        ></script>
    </body>
</html>