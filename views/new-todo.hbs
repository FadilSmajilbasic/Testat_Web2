<form class=" d-flex flex-column">
    <div class="d-flex form-group">
        <label for="titleInput">Title</label>
        <input id="titleInput" type="text" name="title" placeholder="Enter name" required />
    </div>
    <div class="form-group d-flex flex-column">
        <label for="fm3" class="form-check-label">Importance</label>
        <input type="radio" class="form-check-input" name="importance" id="fm3" value="Low" />Low
        <input type="radio" class="form-check-input" name="importance" id="fm3" value="Medium" />Medium
        <input type="radio" class="form-check-input" name="importance" id="fm3" value="High" />High
        <input type="radio" class="form-check-input" name="importance" id="fm3" value="Urgent" />Urgent!
    </div>
    <div class="form-group">
        <label for="dateInput">Due Date</label>
        <input
            id="dateInput"
            name="dueDate"
            type="date"
            min="{{today}}"
            value="{{today}}"
        />
    </div>
    <div class="form-group">
        <label for="descriptionTextArea">Description</label>
        <textarea id="descriptionTextArea" type="text" name="description" placeholder="Description"></textarea>
    </div>
    <input type="submit" value="Create" />
</form>
<div class="d-flex ">
    <a class="btn btn-primary m-2" href="/">{{#if update}}Update{{else}} Create{{/if}}</a>

    <a class="btn btn-primary m-2" href="/">{{#if update}}Update{{else}} Create{{/if}} &amp; Overview</a>

    <a class="btn btn-primary m-2" href="/">Overview</a>
</div>