<div class="row align-items-center" style="height: 100vh;">
    <div class="mx-auto" style="width:auto">
        <form class="container" action="/createTask" method="post">
            <div class="form-group row">
                <div class="col">
                    <label for="titleInput">Title: </label>
                </div>
                <div class="col-lg">
                    <input id="titleInput" type="text" class="mx-2" name="title" placeholder="Enter name" required />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label class="form-check-label">Importance: </label>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="Low" required />Low
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="Medium" />Medium
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="High" />High
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="Urgent" />Urgent!

                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <label for="dateInput">Due Date:</label>

                </div>
                <div class="col-lg">
                    <input id="dateInput" name="dueDate" type="date" min="{{today}}" value="{{today}}" required />
                </div>
            </div>
            <div class="form-group row">
                <div class="col">

                    <label for="descriptionTextArea">Description:</label>
                </div>
                <div class="col-lg">

                    <textarea id="descriptionTextArea" class="w-100" type="text" name="description" placeholder="Description"></textarea>
                </div>

            </div>
            <div class="d-flex row">
                <div class="col">

                    <input class="btn btn-primary m-2" type="submit" value="{{submitText}}" />
                    <a class="btn btn-primary m-2" href="/createTask?forward=true">{{submitText}} &amp; Overview</a>
                    <a class="btn btn-primary m-2" href="/">Overview</a>
                </div>
            </div>
        </form>
    </div>
</div>