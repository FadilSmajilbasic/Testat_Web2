<div class="row align-items-center" style="height: 100vh;">
    <div class="mx-auto" style="width:40%">
        <form class="container border border-secondary rounded shadow p-3 mb-5 rounded" action="/task/create/{{task._id}}" method="post">
            <div class="form-group row my-2">
                <div class="col">
                    <label for="titleInput">Title: </label>
                </div>
                <div class="col-lg">
                    <input
                        id="titleInput"
                        type="text"
                        class="form-control w-100"
                        name="title"
                        aria-label="title"
                        placeholder="Enter Title"
                        value="{{task.title}}"
                        required
                    />

                </div>

            </div>
            <div class="form-group row my-2">
                <div class="col">
                    <label class="form-check-label">Importance: </label>
                </div>
                <div class="col d-flex justify-content-between">
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="0" {{low_checked}} required />Low
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="1" {{medium_checked}} />Medium
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="2" {{high_checked}} />High
                    <input type="radio" class="form-check-input mr-3" name="importance" id="fm3" value="3" {{urgent_checked}} />Urgent!
                </div>
            </div>

            <div class="form-group row my-2">
                <div class="col">
                    <label for="dateInput">Due Date:</label>
                </div>
                <div class="col-lg">
                    <input id="dateInput" class="form-control w-100" aria-label="title" name="dueDate" type="date" value="{{dueDate}}" required />
                </div>
            </div>
            <div class="form-group row my-2">
                <div class="col">

                    <label for="descriptionTextArea">Description:</label>
                </div>
                <div class="col-lg">

                    <textarea
                        id="descriptionTextArea"
                        wrap="soft"
                        class="w-100 form-control"
                        type="text"
                        name="description"
                        placeholder="Description"
                    >{{task.description}}</textarea>
                </div>
            </div>
            {{#if edit}}
                <div class="d-flex col checkbox-xl my-3">
                    <label class="form-check-label me-4" for="completedCheckbox">Completed:</label>
                    <input class="form-check-input ms-4" type="checkbox" id="completedCheckbox" name="done" {{checked}} />
                </div>
            {{/if}}
            <div class="d-flex justify-content-lg-center col">
                <input class="btn btn-primary m-2" name="action" type="submit" value="{{submitText}}" />
                <input class="btn btn-primary m-2" name="action" type="submit" value="{{submitText}} &amp; Overview" />
                <a class="btn btn-primary m-2" href="/">Overview</a>
            </div>
        </form>
    </div>
</div>