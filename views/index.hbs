<body>
    <div class="d-flex flex-column">
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary m-4" href="/todo">Create new todo</a>
            <a class="btn btn-primary m-4" href="?toggle_style=true">Toggle style</a>
        </div>
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <button class="btn btn-primary mx-2">Name &#x25BD;</button>
                <button class="btn btn-primary mx-2">By Due Date</button>
                <button class="btn btn-primary mx-2">By Creation Date</button>
                <button class="btn btn-primary mx-2">By Importance</button>

            </div>
            <button class="btn btn-primary mx-2">Filter Completed</button>
        </div>
        <table>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Due Date</th>
                <th>Importance</th>
                <th>Completed</th>
                <th>Edit</th>
            </tr>
            {{#each tasks}}
                <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.dueDate}}</td>
                    <td>{{this.importance}}</td>
                    <td>{{this.completed}}</td>
                    <td>
                        <a href="/todo/{{this.id}}/edit">Edit</a>
                        <a href="/todo/{{this.id}}/delete">Delete</a>
                    </td>
                </tr>
            {{/each}}
        </table>
    </div>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"
    ></script>
</body>