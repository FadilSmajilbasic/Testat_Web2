<body>
    {{#if errorMessage}}
        <div class="d-flex w-100 alert alert-danger bg-danger text-white" role="alert">
            {{errorMessage}}
        </div>
    {{/if}}
    <div class="d-flex flex-column">
        <div class="d-flex justify-content-between">
            <a class="btn btn-primary m-4" href="/task">Create new task</a>
            <a class="btn btn-primary m-4" href="?toggleStyle=true">Toggle style</a>
        </div>
        <div class="d-flex justify-content-between">
            <div class="d-flex">
                <button class="btn btn-primary mx-2">Name &#x25BD;</button>
                <button class="btn btn-primary mx-2">By Due Date</button>
                <button class="btn btn-primary mx-2">By Creation Date</button>
                <button class="btn btn-primary mx-2">By Importance</button>

            </div>
            <button class="btn btn-primary mx-2">Filter Completed</button>
        </div>
        <div class="d-flex flex-column mt-4">
            {{#each tasks}}

                <article class="container bg-light m-3">
                    <div class="row">
                        <div class="col-md-12">
                            <h2>{{this.title}}</h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <p>Due date: <span class="text-muted">{{this.dueDate}}</span></p>
                        </div>
                        <div class="col-md-3">
                            <p>Importance: <span class="text-danger">{{this.importance}}</span></p>
                        </div>
                        <div class="col-md-6">
                            <p>Completed: <span class="text-muted">{{this.completed}}</span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p>{{this.description}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <a class="btn btn-primary" href="/task/edit/{{this.id}}">Edit</a>
                            <a class="btn btn-danger" href="/task/delete/{{this.id}}">Delete</a>
                        </div>
                    </div>
                </article>

            {{/each}}
        </div>
    </div>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"
    ></script>
</body>